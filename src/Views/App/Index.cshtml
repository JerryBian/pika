@model List<PikaApp>
@{
    ViewData["Title"] = "Apps";
}

<div class="text-end mb-3">
    <a href="/app/add" class="btn btn-secondary btn-sm"><i class="bi bi-plus-lg"></i> Create new App</a>
</div>

<div class="table-responsive overflow-hidden">
    <table class="table text-md-center align-middle table-bordered table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th class="text-start">App Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>#@item.Id</td>
                    <td class="text-start">@item.Name</td>
                    <td>
                        <div class="row">
                            <div class="col mb-2 me-1">
                                <a class="btn btn-primary btn-sm  w-100" href="/app/@item.Id"><i class="bi bi-info"></i> Detail</a>
                            </div>
                            <div class="col mb-2 me-1">
                                <a class="btn btn-info btn-sm  w-100" href="/app/@item.Id/update"><i class="bi bi-pen"></i> Edit</a>
                            </div>
                            <div class="col mb-2 me-1">
                                <button type="button" class="btn btn-danger btn-sm  w-100" onclick="deleteApp(@item.Id)"><i class="bi bi-trash"></i> Delete</button>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


@section Scripts{
    <script>
        function deleteApp(id) {
            showConfirmMessageModal(`Are your sure to delete app #${id}?`,
                function () {
                    submitRequest(`/api/app/${id}`,
                        {
                            method: "DELETE",
                            okAction: function (res) {
                                window.location.reload();
                            }
                        });
                });
        }

        setActive("taskNav");
    </script>
}