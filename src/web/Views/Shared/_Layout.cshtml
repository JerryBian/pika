<!DOCTYPE html>
<html lang="en" class="w-100 min-vh-100">
<head>
    <meta charset="utf-8"/>
    <meta name="robots" content="noindex, nofollow">
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    @if (ViewData["Title"] == null)
    {
        <title>Pika</title>
    }
    else
    {
        <title>@ViewData["Title"] &middot; Pika</title>
    }

    <link rel="stylesheet" href="~/style.min.css" asp-append-version="true"/>
</head>
<body class="w-100">
<div class="container-fluid min-vh-100 d-flex flex-column p-0">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">Pika</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarText">
                <span class="navbar-text small text-muted font-monospace">
                    Run script in background
                </span>
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                            <a href="/task/add?isTemp=true" class="nav-link text-success" id="runTempTask"><i class="bi bi-terminal"></i> Run Temp Task</a>
                    </li>
                    <li class="vr"></li>
                    <li class="nav-item">
                            <a class="nav-link" href="/task" id="taskNav"><i class="bi bi-list"></i> Saved Tasks</a>
                    </li>
                    <li class="nav-item">
                            <a class="nav-link" href="/run" id="runNav"><i class="bi bi-signpost"></i> All Runs</a>
                    </li>
                    <li class="nav-item">
                            <a class="nav-link" href="/setting" id="settingNav"><i class="bi bi-gear-fill"></i> Setting</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main class="my-2 py-3 container">
        @RenderBody()
    </main>

    <footer class="mt-auto fs-6 text-muted container text-center p-3">
        Pika &middot;
        <a href="https://github.com/JerryBian/pika" class="text-decoration-none">
                <i class="bi bi-github"></i>
        </a> &middot;
        @AppUtil.AppVersion
    </footer>
</div>

<div class="modal fade" tabindex="-1" id="messageModal" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="messageModalTitle">Modal title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="messageModalBody">
            </div>
            <div class="modal-footer" id="messageModalFooter">
            </div>
        </div>
    </div>
</div>

<script src="~/script.min.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", false)
</body>
</html>